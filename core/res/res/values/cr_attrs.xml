<resources>

    <declare-styleable name="BatteryBarController">
        <attr name="viewLocation" format="integer" />
    </declare-styleable>

    <!-- Custom Analog clock -->
    <declare-styleable name="CustomAnalogClock">
        <attr name="custom_dial" format="reference"/>
        <attr name="custom_hand_hour" format="reference"/>
        <attr name="custom_hand_minute" format="reference"/>
        <attr name="deadpool_dial" format="reference"/>
        <attr name="deadpool_hand_hour" format="reference"/>
        <attr name="deadpool_hand_minute" format="reference"/>
        <attr name="spidey_dial" format="reference"/>
        <attr name="spidey_hand_hour" format="reference"/>
        <attr name="spidey_hand_minute" format="reference"/>
    </declare-styleable>

    <!-- DeadPool Analog clock -->
    <declare-styleable name="DeadPoolAnalogClock">
        <attr name="deadpool_dial" format="reference"/>
        <attr name="deadpool_hand_hour" format="reference"/>
        <attr name="deadpool_hand_minute" format="reference"/>
    </declare-styleable>

    <!-- Spidey Analog clock -->
    <declare-styleable name="SpideyAnalogClock">
        <attr name="spidey_dial" format="reference"/>
        <attr name="spidey_hand_hour" format="reference"/>
        <attr name="spidey_hand_minute" format="reference"/>
    </declare-styleable>
</resources>
