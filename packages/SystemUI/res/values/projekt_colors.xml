<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Screen pinning layout -->
    <color name="screen_pinning_background_color">@*android:color/accent_device_default_light</color>
    <color name="screen_pinning_title_text">@android:color/white</color>
    <color name="screen_pinning_description_text">@android:color/white</color>
    <color name="screen_pinning_button_text">@android:color/white</color>
    <color name="screen_pinning_bg_circ_color">#40FFFFFF</color>
    <color name="screen_pinning_nav_icon_hightlight_outer_color">@android:color/white</color>
    <color name="screen_pinning_positive_text_color">@*android:color/text_color_primary</color>
    <color name="screen_pinning_negative_text_color">@*android:color/text_color_primary</color>

    <!-- Quicksettings main QS background-->
    <color name="quick_settings_status_bar_background_color">#ff000000</color>

    <!-- QS tiles Active, Inactive and Unavailable tint (Requires config_enable_qs_tile_tinting bool set to true) -->
    <color name="qs_tiles_active_tint">@*android:color/primary_device_default_settings_light</color>
    <color name="qs_tiles_inactive_tint">@*android:color/text_color_secondary</color>
    <color name="qs_tiles_unavailable_tint">@*android:color/text_color_secondary</color> <!-- keep in mind that the code adds 0.26 (light) or 0.30 (dark) alpha to this color. -->

    <!-- QS tiles background Active, Disable, and Inactive tint (Requires config_enable_qs_tile_tinting bool set to true) -->
    <color name="qs_tiles_background_active_tint">@*android:color/accent_device_default_light</color>
    <color name="qs_tiles_background_disabled_tint">@*android:color/secondary_text_material_light</color> <!-- keep in mind that the code adds 0.26 (light) or 0.30 (dark) alpha to this color. -->
    <color name="qs_tiles_background_inactive_tint">@*android:color/text_color_secondary</color>

    <!-- Navigation button ripple color -->
    <color name="navbutton_ripple_color">#FFFFFFFF</color>

    <!-- Navigation button ripple color for LightNavigationBar -->
    <color name="navbutton_ripple_color_dark">#ff000000</color>

    <!-- Screenshot action colors -->
    <color name="screenshot_flash_color">@android:color/white</color>
    <color name="screenshot_background_color">@android:color/black</color>

    <!-- Keyguard affordance circle background -->
    <color name="keyguard_affordance_circle_background">@android:color/white</color>

    <!-- QS edit page background color -->
    <color name="qs_edit_item_decoration_bg">@*android:color/secondary_device_default_settings_light</color>
</resources>
